<%= render 'page_title', title: @review.title %>
<head>
  <style>
    <% if @review.rating != nil %>
    .stars-inner {
      width: <%= @review.rating.round(1)*20 %>%;
    }

    <%end%>
  </style>
</head>
<div id="about">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <div class="col-md-12">
          <div class="col-xs-12 col-md-4">
            <%= link_to game_detail_path(id: @review.game_id) do %>
              <%= image_tag(@game.photos.first.image, :class => "img-responsive") %>
            <% end %>
          </div>
          <div class="col-xs-12 col-md-8">
            <div class="about-text">
              <h2><%= @review.title %></h2>
              <div class="header_shousai_game_star stars-outer">
                <div class="stars-inner"></div>
              </div>
              <div class="header_shousai_game">
                <% if @review.rating != nil %>
                  <p><%= @review.rating.round(1) %> Point</p>
                <% end %>
              </div>
              <hr>
              <p>created by <%= @review.user.full_name %> at <%= @review.created_at.to_date %></p>
              <hr>
              <% if user_signed_in? and @review.likes.where(user_id: current_user.id).count != 0 %>
                <span><%= @review.likes.count %></span>
                <span>
                  <%= link_to like_path(likeable_type: "Review", likeable_id: @review.id), method: :delete do %>
                <strong><i class="fa fa-thumbs-o-up fa-lg" aria-hidden="true"></i>
                </strong>
                    </span>
                <% end %>
              <% else %>
                <span>
                <span><%= @review.likes.count %></span>
                  <%= link_to likes_path(likeable_type: "Review", likeable_id: @review.id), method: :post do %>
                <strong><i class="fa fa-thumbs-o-up fa-lg" aria-hidden="true"></i>
                </strong>
                    </span>
                <% end %>
              <% end %>
              <hr>
            </div>
          </div>
          <div class="col-md-12">
            <p><%= raw @review.content %></p>
          </div>
        </div>
        <div class="col-md-12">
          <div class="col-md-4 star-review">
            <div class="create_review_button">
              <% if user_signed_in? and @review.user_id == current_user.id %>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#basicExampleModal">
                  Edit your Review
                </button>
              <% end %>
            </div>
          </div>
        </div>
        <div class="col-md-12">
          <div id="services">
            <div class="section-title">
              <h2>Comments</h2>
            </div>
            <% @review.comments.each do |comment| %>
              <div class="row">
                <div class="col-md-1 picture-user">
                  <img src="/assets/game/game1.jpg" alt="">
                </div>
                <div class="col-md-11">
                  <div class="col-md-12 fix-pading-content">
                    <div class="name-user col-md-3"><%= comment.user.full_name %>
                    </div>
                    <div class="col-md-3 star-user">
                      <div class="text-right"><%= time_ago_in_words(comment.created_at) %></div>
                    </div>
                  </div>
                  <div class="col-md-12">
                    <% if comment.user == current_user %>
                    <div class="fix-content-comment-space " style="margin: 9px -15px 10px 0px!important;">
                      <a href="#" data-xeditable="true" data-pk=<%= comment.id %> data-model="comment" data-name="content" data-url=<%= review_comment_path(review_id: @review.id, id: comment.id) %> data-title="Edit" class="editable editable-click"><%= comment.content %></a>
                    </div>
                    <% else %>
                      <div class="fix-content-comment-space " style="margin: 9px -15px 10px 0px!important;"><%= comment.content %></div>
                  <% end %>
                      <div>
                      <% if user_signed_in? and comment.likes.where(user_id: current_user.id).count != 0 %>
                        <strong><%= comment.likes.count %></strong>
                        <span><%= link_to like_path(likeable_type: "Comment", likeable_id: comment.id), method: :delete do %>
                          <strong><i class="fa fa-thumbs-up fa-lg" aria-hidden="true" style="color:#3577e5"></i>
                          </strong>
                            </span>
                        <% end %>
                      <% else %>
                        <span><%= comment.likes.count %></span>
                        <%= link_to likes_path(likeable_type: "Comment", likeable_id: comment.id), method: :post do %>
                          <strong><i class="fa fa-thumbs-o-up fa-lg" aria-hidden="true"></i>
                          </strong>
                          </span>
                        <% end %>
                      <% end %>
                      <% if current_user == comment.user %>
<!--                        <strong><%#= link_to edit_review_comment_path(review_id: @review.id, comment_id: comment.id) do %>-->
<!--                            Edit-->
<!--                          <%# end %>|-->
                          <%= link_to review_comment_path(review_id: @review.id, comment_id: comment.id), method: :delete, data: {confirm: 'Are you sure?'} do %>
                            | <i class="fa fa-trash-o fa-lg" aria-hidden="true"></i>
                          <% end %>
                        </strong>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
            <br><br>
            <%= form_for [@review, Comment.new] do |f| %>
              <%= f.text_field :content, placeholder: "Add a comment...", :class => "input-comment" %>
              <%= hidden_field_tag :review_id, params[@review.id] %>
              <br><br>
              <div class="form-group text-right">
                <%= f.submit "Add Comment", class: "btn btn-primary add-commit-button" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="row ">
          <div class="col-md-12 text-center related-game ">Related Game</div>
          <div class="col-md-12 text-center list-related-game">
            <a href="#"><strong>Game 1</strong>
