<div id="about">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <div class="col-md-12">
          <div class="col-xs-12 col-md-5">
            <%= image_tag(@game.photos.first.image, :class => "img-responsive") %>
          </div>
          <div class="col-xs-12 col-md-7">
            <div class="about-text">
              <h2><%= @game.name %></h2>
              <!--                            <div>レビュー作事者</div>-->
              <div class="header_shousai_game">
                <i class="fa fa-lg fa-star" aria-hidden="true"></i>
                <i class="fa fa-lg fa-star" aria-hidden="true"></i>
                <i class="fa fa-lg fa-star" aria-hidden="true"></i>
                <i class="fa fa-lg fa-star" aria-hidden="true"></i>
                <i class="fa fa-lg fa-star-half-o" aria-hidden="true"></i>
              </div>
              <div class="header_shousai_game">
                <% if @game.reviews.average(:rating) != nil %>
                  <p><%= @game.reviews.average(:rating).round(1) %> Point</p>
                <% else %>
                  <p>No rating</p>
                <% end %>
              </div>
              <div class="header_shousai_game">
                <% if @game.reviews.count() != nil %>
                  <p><%= @game.reviews.count() %> rating</p>
                <% end %>
              </div>

              <hr>
              <div>
                <p><%= @game.summary.slice(0, 200) %></p>
              </div>
              <div>
                <div class="collapse" id="collapseExample">
                  <div>
                    <p>Platform:
                      <% @game.platform_of_game.each_with_index do |platform, index| %>
                        <%= index == 0 ? "" : "," %>
                        <%= platform.name %>
                      <% end %>
                    </p>
                    <p>Genres:
                      <% @game.genres_of_game.each_with_index do |genre, index| %>
                        <%= index == 0 ? "" : "," %>
                        <%= genre.name %>
                      <% end %>
                    </p>
                  </div>
                </div>
                <p>
                  <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                    Read more
                  </button>
                </p>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-12">
          <div class="col-md-4 star-review">
            <section class="micropost_form">
              <% if user_signed_in? %>
                <% if @game.reviews.where(user_id: current_user.id).count != 0 %>
                  <% @review = @game.reviews.where(user_id: current_user.id).first %>
                <% else %>
                  <% @review = Review.new %>
                  <% @review.game_id = @game.id %>
                <% end %>

                <%= render 'reviews/rating_form' %>
              <% end %>
            </section>

            <div class="create_review_button">
              <% if user_signed_in? and @game.reviews.where(user_id: current_user.id).count != 0 %>
                <%= link_to edit_review_path(id: @game.reviews.where(user_id: current_user.id).first.id) do %>
                  <button type="button" class="btn btn-danger">Edit your Review</button>
                <% end %>

              <% else %>
                <%= link_to new_review_path(game_id: @game.id) do %>
                  <button type="button" class="btn btn-danger">Create New Review</button>
                <% end %>
              <% end %>
            </div>
          </div>
          <div class="col-md-8">
            <h2>GET GAME</h2>
            <div class="col-md-4 url_link_game">
              <a href="#">URL A</a>
            </div>
            <div class="col-md-4 url_link_game">
              <a href="#">URL B</a>
            </div>
            <div class="col-md-4 url_link_game">
              <a href="#">URL C</a>
            </div>
          </div>
        </div>
        <div class="col-md-12">
          <div id="services">
            <div class="section-title">
              <h2>Review Game</h2>
            </div>

            <div class="header-rating"><%= @game.reviews.where.not(:title => nil).count() %> Rating Detail</div>
            <div class="col-md-12">
              <% @game.reviews.where.not(:title => nil).each do |review| %>
                <div class="row">


                  <div class="col-md-10 col-md-offset-1 user-review">
                    <div class="col-md-1 picture-user">
                      <img src="/assets/game/game1.jpg" alt="">
                    </div>

                    <div class="col-md-10 col-md-offset-1 user-review">
                      <div class="name-user col-md-3"><%= review.user.full_name %>
                      </div>
                      <div class="col-md-6 star-user">
                        rating: <%= review.rating %>
                      </div>
                      <div class="col-md-3 star-user">
                        <div class="text-right"><%= review.created_at.to_date() %></div>
                      </div>
                      <div class="col-md-10">
                        <strong><%= review.title %></strong>
                      </div>
                      <div class="col-md-12">
                        <p><%= review.content %></p>
                        <div>
                          <strong><%= review.likes.count %> Likes </strong>
                          <a href="#">
                            <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
                          </a>
                          <strong class="space-i"><%= review.comments.count() %> comments</strong>
                          <strong class="space-i"><a href="#"><strong>see review</strong></a></strong>
                          <% if current_user == review.user %>
                            <strong><%= link_to edit_review_path(id: review.id) do %> Edit
                              <% end %>|
                              <%= link_to review_path(id: review.id), method: :delete, remote: true do %> Delete
                              <% end %>
                            </strong>
                          <% end %>
                        </div>
                      </div>
                      <div class="col-md-12">
                        <% review.comments.first(2).each do |comment| %>
                          <div class="row">
                            <div class="col-md-1 picture-user">
                              <img src="/assets/game/game1.jpg" alt="">
                            </div>
                            <div class="col-md-10 col-md-offset-1 user-review">
                              <div class="name-user-replier col-md-4"><%= comment.user.full_name %>
                              </div>
                              <div class="col-md-3 star-user col-md-offset-1">
                                <div class="text-right"><%= comment.created_at.to_date %></div>
                              </div>
                              <div class="col-md-12">
                                <p><%= comment.content %></p>
                                <div>
                                  <strong><%= comment.likes.count %> Likes </strong>
                                  <a href="#">
                                    <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
                                  </a>
                                </div>
                                <% if current_user == comment.user %>
                                  <div class="text-right">
                                    <strong><a href="#">Edit</a> |
                                      <a href="#">Delete</a>
                                    </strong>
                                  </div>
                                <% end %>
                              </div>
                            </div>
                          </div>
                        <% end %>
                      </div>
                    </div>
              <% end %>

              </div>
              </div>
            </div>
          </div>
        </div>
      </div>
