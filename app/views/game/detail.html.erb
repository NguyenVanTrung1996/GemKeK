<%= render 'page_title', title: 'Game detail' %>
<head>
  <style>
    <% if @game.reviews.average(:rating) != nil %>
    .stars-inner {
      width: <%= @game.reviews.average(:rating).round(1)*20 %>%;
    }

    <%end%>

  </style>
</head>
<div id="about">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <div class="col-md-12">
          <div class="col-xs-12 col-md-5">
            <%= image_tag(@game.photos.first.image, :class => "img-responsive") %>
          </div>
          <div class="col-xs-12 col-md-7">
            <div class="about-text">
              <h2><%= @game.name %></h2>


              <div class="header_shousai_game_star stars-outer">
                <div class="stars-inner"></div>
              </div>
              <div class="header_shousai_game">
                <% if @game.reviews.average(:rating) != nil %>
                  <p><%= @game.reviews.average(:rating).round(1) %> Point</p>
                <% else %>
                  <p>No rating</p>
                <% end %>
              </div>
              <div class="header_shousai_game">
                <% if @game.reviews.count() != nil %>
                  <p><%= @game.reviews.count() %> rating</p>
                <% end %>
              </div>
              <hr>
              <div>
                <p><%= @game.summary.slice(0, 200) %></p>
              </div>
              <div class="collapse" id="collapseExample">
                <p>Platform:
                  <% @game.platform_of_game.each_with_index do |platform, index| %>
                    <%= index == 0 ? "" : "," %>
                    <%= platform.name %>
                  <% end %>
                </p>
                <p>Genres:
                  <% @game.genres_of_game.each_with_index do |genre, index| %>
                    <%= index == 0 ? "" : "," %>
                    <%= genre.name %>
                  <% end %>
                </p>
              </div>
              <div>
                <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                  Read more
                </button>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-12">
          <div class="col-md-4 star-review">
            <% if user_signed_in? %>
              <% if @game.reviews.where(user_id: current_user.id).count != 0 %>
                <% @review = @game.reviews.where(user_id: current_user.id).first %>
              <% else %>
                <% @review = Review.new %>
                <% @review.game_id = @game.id %>
              <% end %>
              <%= hidden_field(:game, :id) %>
              <div class="star-rating">
                <span class="fa fa-star-o" data-rating="1"></span>
                <span class="fa fa-star-o" data-rating="2"></span>
                <span class="fa fa-star-o" data-rating="3"></span>
                <span class="fa fa-star-o" data-rating="4"></span>
                <span class="fa fa-star-o" data-rating="5"></span>
                <input type="hidden" name="whatever1" class="rating-value" value=<%= @review.rating %>>
              </div>
            <% end %>

            <div class="create_review_button">
                <% if user_signed_in? %>
                    <% if @game.reviews.where(user_id: current_user.id).count != 0 %>

                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#basicExampleModal">
                        Edit your Review
                        </button>
                     <% else %>

                          <!-- <button type="button" class="btn btn-danger">Create New Review</button> -->
                      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#basicExampleModal">
                        Create New Review
                      </button>
              <% end %>
          <% end %>
            </div>
          </div>
          <div class="col-md-8">
            <h2>GET GAME</h2>
            <div class="col-md-4 url_link_game">
              <a href="#">URL A</a>
            </div>
            <div class="col-md-4 url_link_game">
              <a href="#">URL B</a>
            </div>
            <div class="col-md-4 url_link_game">
              <a href="#">URL C</a>
            </div>
          </div>
        </div>
        <div class="col-md-12">
          <div id="services">
            <div class="section-title">
              <h2>Review Game</h2>
            </div>
            <div class="header-rating"><%= @game.reviews.where.not(:title => nil).count() %> Rating Detail</div>
            <% @game.reviews.where.not(:title => nil).each do |review| %>
              <div class="row">
                <div class="col-md-1 picture-user">
                  <img src="/assets/game/game1.jpg" alt="">
                </div>
                <div class="col-md-11">
                  <div class="col-md-12 user_review_space_top">
                    <div class="name-user col-md-3"><%= review.user.full_name %> 
                    </div>
                    <div class="col-md-3 fix-title-space star-user">
                      <strong ><%= review.title %></strong>
                    </div>
                    <div class="col-md-3 star-user">
                      rating: <%= review.rating %>
                    </div>
                    <div class="col-md-3 star-user">
                      <div class="text-right"><%= review.created_at.to_date() %></div>
                    </div>
                  </div>
<!--                   <div class="col-md-12 fix-title-space">
                    <span ><%= review.title %></span>
                  </div> -->
                  <div class="col-md-12 ">
                    <div class="fix-content-review-space" style="margin: 20px 0px 15px 0px !important"><%=raw review.content[0..1000] + "....." %></div>
                    <div>
                      <strong><%= review.likes.count %> Likes </strong>
                      <% if user_signed_in? and review.likes.where(user_id: current_user.id).count != 0 %>
                    <%= link_to like_path(review.id, likeable_type: "Review", likeable_id: review.id), method: :delete do %>
                        <i class="fa fa-thumbs-o-up fa-lg" aria-hidden="true"></i>
                      <% end %>
                    <% else %>
              
                      <%= link_to likes_path(likeable_type: "Review", likeable_id: review.id), method: :post do %>
                        <i class="fa fa-thumbs-o-up " aria-hidden="true"></i>
                      <% end %>
                    <% end %>
                  
                      <strong class="space-i"><%= review.comments.count() %> comments</strong>
<!--                      <strong class="space-i"><a href="#"><strong>see review</strong></a></strong>-->
                      <strong class="space-i"><%= link_to review_path(id: review.id), method: :get do %>
                        Full Review
                      <% end %></strong>
                      <% if current_user == review.user %>
                        <strong class="btn btn-primary" data-toggle="modal" data-target="#basicExampleModal">
                             Edit
                          </strong>
                          <strong>
                          <%= link_to review_path(id: review.id), method: :delete, remote: true do %> Delete
                          <% end %>
                        </strong>
                      <% end %>
                    </div>
                  </div>
                  <% review.comments.first(2).each do |comment| %>
                    <div class="col-md-12">
                      <div class="row">
                        <div class="col-md-1 picture-user">
                          <img src="/assets/game/game1.jpg" alt="">
                        </div>
                        <div class="col-md-11">
                          <div class="col-md-12 user_review_space_top fix-pading-content">
                            <div class="name-user-replier col-md-3"><%= comment.user.full_name %>
                            </div>
                            <div class="col-md-3 star-user col-md-offset-6">
                              <div class="text-right"><%= comment.created_at.to_date %></div>
                            </div>
                          </div>
                          <div class="col-md-12">
                            <div class="fix-content-comment-space" style="margin: 9px -15px 10px 0px!important;">
                              <%= comment.content %>
                            </div>
                            <div>
                              <strong><%= comment.likes.count %> </strong>
                              <% if user_signed_in? and comment.likes.where(user_id: current_user.id).count != 0 %>
                              <%= link_to like_path(comment.id, likeable_type: "Comment", likeable_id: comment.id), method: :delete do %>
                                    <i class="fa fa-thumbs-o-up fa-lg" aria-hidden="true"></i>
                                  <% end %>
                              <% else %>
                                  <%= link_to likes_path(likeable_type: "Comment", likeable_id: comment.id), method: :post do %>
                                  <i class="fa fa-thumbs-o-up fa-lg" aria-hidden="true"></i>
                                <% end %>
                              <% end %>
                            </div>
                            <% if current_user == comment.user %>
                              <div class="text-right">
                                <strong><a href="#">Edit</a> |
                                  <a href="#">Delete</a>
                                </strong>
                              </div>
                            <% end %>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
